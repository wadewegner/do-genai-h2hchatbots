{
  "name": "genai-exploring-api",
  "version": "1.0.0",
  "description": "A modern chat application using DigitalOcean's GenAI Platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:coverage": "jest --coverage --detectOpenHandles"
  },
  "keywords": [
    "chat",
    "ai",
    "digitalocean",
    "genai",
    "express"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-session": "^1.18.1",
    "highlight.js": "^11.9.0",
    "jest": "^29.7.0",
    "jsonwebtoken": "^9.0.2",
    "marked": "^11.1.1",
    "openai": "^4.20.1",
    "supertest": "^6.3.3",
    "uuid": "^11.0.4",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "jest-environment-jsdom": "^29.7.0",
    "nodemon": "^3.1.9",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFiles": [
      "<rootDir>/tests/setup.js"
    ],
    "testEnvironmentOptions": {
      "url": "http://localhost"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1"
    },
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "public/js/**/*.js",
      "services/**/*.js",
      "routes/**/*.js"
    ]
  }
}
